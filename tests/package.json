{
  "name": "@artifio/e2e-tests",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen localhost:5173",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:load": "k6 run tests/load/10k-concurrent-users.js",
    "test:load:smoke": "k6 run tests/load/smoke-test.js",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:load:smoke",
    "test:ci": "npm run test:unit && npm run test:e2e -- --reporter=json",
    "test:dashboard": "node tests/dashboard/server.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "k6": "^0.0.0"
  }
}
